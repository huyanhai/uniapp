.login-sheet {
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  width: 100%;
  height: 100vh;
  z-index: 100;
  top: 0;
  left: 0;
  overflow: hidden;
}
.login-sheet .model {
  width: 100%;
  bottom: 0;
  position: absolute;
  padding: 50rpx;
  height: 100vh;
  box-sizing: border-box;
  z-index: 110;
  background: #FFFFFF;
}
.login-sheet .model .title {
  font-size: 40rpx;
  color: #333;
  margin-top: 70rpx;
  text-align: center;
}
.login-sheet .model .img-s {
  width: 428rpx;
  height: 350rpx;
  margin: 120rpx auto 80rpx auto;
  display: block;
}
.login-sheet .model .box .text {
  display: block;
  color: #9d9d9d;
  font-size: 12px;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  text-align: center;
}
.login-sheet .model .auth-button {
  border-radius: 10rpx;
  font-size: 30rpx;
  height: 40px;
  line-height: 40px;
  background: #303030;
  border-radius: 50px;
  color: #FFDD00;
}

