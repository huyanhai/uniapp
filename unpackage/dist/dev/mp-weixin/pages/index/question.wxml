<view class="question-content"><input class="ui-input" placeholder="请输入设备编号" data-event-opts="{{[['input',[['__set_model',['$0','deviceId','$event',[]],['feedback']]]]]}}" value="{{feedback.deviceId}}" bindinput="__e"/><view class="category"><text class="label">分类标签</text><view class="item-box"><radio-group data-event-opts="{{[['change',[['changed',['$event']]]]]}}" class="group" bindchange="__e"><block wx:for="{{items}}" wx:for-item="item" wx:for-index="index" wx:key="index"><label class="{{['ui-radio',(item.checked)?'active':'']}}"><radio value="{{item.value}}" checked="{{item.checked}}"></radio><text class="text">{{item.name}}</text></label></block></radio-group></view></view><view class="upload-img"><text class="label">我要反馈</text><view class="form"><textarea class="textarea" placeholder="请输入问题或意见" data-event-opts="{{[['input',[['__set_model',['$0','remarks','$event',[]],['feedback']]]]]}}" value="{{feedback.remarks}}" bindinput="__e"></textarea><view class="lists"><view data-event-opts="{{[['tap',[['uploadImg',['$event']]]]]}}" class="upload" bindtap="__e"></view><block wx:for="{{imgList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="list"><icon data-event-opts="{{[['tap',[['delImg',[index]]]]]}}" class="close" bindtap="__e"></icon><image class="img" src="{{item}}"></image></view></block></view></view></view><view class="call-us"><text class="label">联系方式</text><input class="ui-input" placeholder="请输入联系电话" type="number" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],['feedback']]]]]}}" value="{{feedback.phone}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['feedbackFn',['$event']]]]]}}" class="submit" bindtap="__e">提交</view></view>