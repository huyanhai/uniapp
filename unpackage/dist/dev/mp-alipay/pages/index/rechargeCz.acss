.balance-content .balance-box {
  margin: 0 30rpx 30rpx 30rpx;
}
.balance-content .balance-box .tips {
  font-size: 24rpx;
  color: #999999;
}
.balance-content .balance-box .items-js {
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  height: 150rpx;
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.balance-content .balance-box .items-js .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
          flex: 1 0 auto;
  position: relative;
}
.balance-content .balance-box .items-js .item:last-child::after {
  display: none;
}
.balance-content .balance-box .items-js .item::after {
  content: "";
  height: 90rpx;
  width: 2rpx;
  background: #DFDFDF;
  display: block;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  position: absolute;
}
.balance-content .balance-box .items-js .item .text {
  font-size: 28rpx;
  color: #333333;
}
.balance-content .balance-box .items-js .item .num {
  font-size: 28rpx;
  color: #333333;
}
.balance-content .label {
  font-size: 28rpx;
  color: #333333;
  width: 100%;
  text-align: center;
  margin-top: 70rpx;
}
.balance-content .choose-fs {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 130rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-top: 30rpx;
}
.balance-content .choose-fs .icons {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
  color: #333333;
}
.balance-content .choose-fs .icons .img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.balance-content .form .group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.balance-content .form .ui-radio {
  background: #DFDFDF;
  border-radius: 8rpx;
  width: calc((100% - 40rpx)/2);
  height: 90rpx;
  text-align: center;
  white-space: nowrap;
  font-size: 26rpx;
  line-height: 90rpx;
  margin-top: 30rpx;
  margin-right: 40rpx;
  box-sizing: border-box;
}
.balance-content .form .ui-radio:nth-child(2n + 2) {
  margin-right: 0;
}
.balance-content .form .ui-radio .text {
  color: #333333;
  font-size: 32rpx;
}
.balance-content .form .ui-radio.active {
  background: #303030;
  border-radius: 8rpx;
  width: calc((100% - 40rpx)/2);
  height: 90rpx;
  text-align: center;
  white-space: nowrap;
  font-size: 32rpx;
  line-height: 90rpx;
  box-sizing: border-box;
}
.balance-content .form .ui-radio.active .text {
  color: #FFDD00;
  font-size: 32rpx;
}
.balance-content .form radio {
  display: none;
}
.balance-content .operation {
  margin: 100rpx 30rpx 0 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.balance-content .operation .recharge {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 90rpx;
  background: #303030;
  font-size: 32rpx;
  color: #FFDD00;
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
          flex: 1 0 auto;
}
.balance-content .operation .recharge.back {
  margin-right: 20rpx;
  background: #FFDD00;
  color: #303030;
}
.balance-content .operation .recharge.ok {
  margin-left: 20rpx;
}
.balance-content .history {
  position: absolute;
  bottom: 120rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 100%;
}
.balance-content .history .text {
  color: #FFDD00;
}
.balance-content checkbox .wx-checkbox-input {
  border-radius: 50%;
  /* 圆角 */
  width: 30rpx;
  /* 背景的宽 */
  height: 30rpx;
  /* 背景的高 */
}
.balance-content checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1rpx solid #FFDD00;
  background: #FFDD00;
}
.balance-content checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  /* 圆角 */
  width: 30rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 30rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  /* 对勾大小 30rpx */
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

