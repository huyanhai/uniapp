.near-shop {
  width: 100vw;
  height: 100vh;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.near-shop .searchs {
  height: 60rpx;
  line-height: 60rpx;
  background: #F2F2F2;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 30rpx;
  margin-right: 100rpx;
  position: relative;
  padding: 0 20rpx;
}
.near-shop .searchs input {
  background: none;
  font-size: 24rpx;
}
.near-shop .searchs .img {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.near-shop .searchs .btn {
  position: absolute;
  width: 80rpx;
  height: 60rpx;
  right: -100rpx;
  text-align: center;
  color: #303030;
  border-radius: 10rpx;
}
.near-shop .stores-content {
  margin-bottom: 30rpx;
}
.near-shop .no-order {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}

