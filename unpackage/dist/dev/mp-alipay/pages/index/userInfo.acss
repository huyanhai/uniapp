  width: 138rpx;
  height: 138rpx;
  position: relative;
}
.user-info-content .info .top .post::before {
  width: 128rpx;
  height: 128rpx;
  border-radius: 128rpx;
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
