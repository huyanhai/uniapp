.use-zn {
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background: #FFFFFF;
}
.use-zn .use-hd {
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 auto;
          flex: 0 0 auto;
  padding: 0 40rpx;
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  background: #FFFFFF;
  z-index: 100;
}
.use-zn .use-hd .item {
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  position: relative;
  height: 80rpx;
}
.use-zn .use-hd .item.active {
  font-weight: bold;
}
.use-zn .use-hd .item.active::before {
  content: "";
  width: 50rpx;
  height: 4rpx;
  background: #FFDD00;
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.use-zn .use-bd {
  height: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
          flex: 1 0 auto;
  padding-top: 120rpx;
  box-sizing: border-box;
}
.use-zn .use-bd .rhsy {
  padding: 0 40rpx;
}
.use-zn .use-bd .rhsy .item {
  margin-bottom: 30rpx;
}
.use-zn .use-bd .rhsy .item .title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 32rpx;
  color: #333333;
}
.use-zn .use-bd .rhsy .item .title .text {
  font-size: 32rpx;
  color: #DFDFDF;
  margin-left: 20rpx;
}
.use-zn .use-bd .rhsy .item .tips {
  font-size: 24rpx;
  color: #333333;
  margin: 20rpx 0;
}
.use-zn .use-bd .rhsy .item .img {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.use-zn .use-bd .rhzj .item {
  margin-bottom: 30rpx;
}
.use-zn .use-bd .rhzj .item .img {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  display: block;
}

