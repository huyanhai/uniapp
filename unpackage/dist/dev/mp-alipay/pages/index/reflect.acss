.balance-content {
  height: 100vh;
}
.balance-content .label {
  font-size: 28rpx;
  color: #333333;
  width: 100%;
  text-align: center;
  margin-top: 70rpx;
}
.balance-content .money {
  font-size: 50rpx;
  color: #333333;
  text-align: center;
}
.balance-content .form {
  padding: 0 30rpx;
}
.balance-content .form .label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
  text-align: left;
}
.balance-content .form .check-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  /* 重写 checkbox 样式 */
  /* 未选中的 背景样式 */
  /* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
  /* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
}
.balance-content .form .check-box .check-label {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  color: #333333;
}
.balance-content .form .check-box .check-label .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.balance-content .form .check-box checkbox .wx-checkbox-input {
  border-radius: 50%;
  /* 圆角 */
  width: 30rpx;
  /* 背景的宽 */
  height: 30rpx;
  /* 背景的高 */
}
.balance-content .form .check-box checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1rpx solid #FFDD00;
  background: #FFDD00;
}
.balance-content .form .check-box checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  /* 圆角 */
  width: 30rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 30rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  /* 对勾大小 30rpx */
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.balance-content .form .input-box {
  height: 90rpx;
  background: #F2F4F6;
  border-radius: 4rpx;
  position: relative;
}
.balance-content .form .input-box .input {
  width: 100%;
  height: 100%;
  padding-left: 60rpx;
  color: #333333;
  font-size: 28rpx;
}
.balance-content .form .input-box .money-type {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  left: 15rpx;
}
.balance-content .operation {
  margin: 100rpx 30rpx 0 30rpx;
}
.balance-content .operation .recharge {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 90rpx;
  background: #22A6F1;
  font-size: 30rpx;
  color: #FFFFFF;
}
.balance-content .history {
  position: absolute;
  bottom: 120rpx;
  text-align: center;
  font-size: 28rpx;
  color: #22A6F1;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}

