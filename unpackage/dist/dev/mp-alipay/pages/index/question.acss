.question-content {
  box-sizing: border-box;
  padding: 30rpx;
}
.question-content .ui-input {
    height: 90rpx;
    line-height: 90rpx;
    background: #F2F4F6;
    border-radius: 4rpx;
    font-size: 28rpx;
    color: #C9C9C9;
    padding-left: 20rpx;
}
.question-content .category {
    margin-top: 40rpx;
}
.question-content .category .label {
      font-size: 28rpx;
      color: #333333;
}
.question-content .category .item-box .group {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
}
.question-content .category .item-box .ui-radio {
      border: 1px solid #F2F4F6;
      background: #F2F4F6;
      border-radius: 60rpx;
      width: calc((100% - 80rpx)/3);
      height: 60rpx;
      text-align: center;
      white-space: nowrap;
      font-size: 26rpx;
      line-height: 60rpx;
      margin-top: 30rpx;
      margin-right: 40rpx;
      box-sizing: border-box;
}
.question-content .category .item-box .ui-radio:nth-child(3n + 3) {
        margin-right: 0;
}
.question-content .category .item-box .ui-radio .text {
        color: #22A6F1;
        font-size: 26rpx;
}
.question-content .category .item-box .ui-radio.active {
        border: 1px solid #22A6F1;
        background: #22A6F1;
        border-radius: 60rpx;
        width: calc((100% - 80rpx)/3);
        height: 60rpx;
        text-align: center;
        white-space: nowrap;
        font-size: 26rpx;
        line-height: 60rpx;
        box-sizing: border-box;
}
.question-content .category .item-box .ui-radio.active .text {
          color: #fff;
          font-size: 26rpx;
}
.question-content .category .item-box radio {
      display: none;
}
.question-content .upload-img {
    margin-top: 40rpx;
}
.question-content .upload-img .label {
      font-size: 28rpx;
      color: #333333;
}
.question-content .upload-img .form {
      margin-top: 10rpx;
}
.question-content .upload-img .form .textarea {
        background: #F2F4F6;
        height: 260rpx;
        font-size: 28rpx;
        color: #C9C9C9;
        width: 100%;
        border-radius: 4rpx;
        box-sizing: border-box;
        padding: 20rpx;
}
.question-content .upload-img .form .lists {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-flex-wrap: wrap;
                flex-wrap: wrap;
        margin-top: 20rpx;
}
.question-content .upload-img .form .lists .upload {
          width: 134rpx;
          height: 100rpx;
          border-radius: 8rpx;
          box-sizing: border-box;
          background: #F2F4F6;
          border: 2rpx dashed #D7D7D7;
          background: url("http://wd-qidian.oss-cn-beijing.aliyuncs.com/mini/icon-photo.png") no-repeat center center;
          background-size: 61rpx 46rpx;
          margin-right: 30rpx;
          margin-bottom: 30rpx;
}
.question-content .upload-img .form .lists .list {
          width: 134rpx;
          height: 100rpx;
          border-radius: 8rpx;
          position: relative;
          margin-right: 30rpx;
          margin-bottom: 30rpx;
}
.question-content .upload-img .form .lists .list .img {
            width: 100%;
            height: 100%;
}
.question-content .upload-img .form .lists .list .close {
            width: 28rpx;
            height: 28rpx;
            background: red;
            position: absolute;
            right: -10rpx;
            top: -10rpx;
            border-radius: 28rpx;
            background: url("http://wd-qidian.oss-cn-beijing.aliyuncs.com/mini/icon-txsb.png") no-repeat;
            background-size: cover;
}
.question-content .call-us {
    margin-top: 40rpx;
}
.question-content .call-us .label {
      font-size: 28rpx;
      color: #333333;
      margin-bottom: 20rpx;
      display: block;
}
.question-content .submit {
    height: 90rpx;
    border-radius: 90rpx;
    background: #22A6F1;
    color: #FFFFFF;
    font-size: 30rpx;
    text-align: center;
    line-height: 90rpx;
    margin-top: 40rpx;
}

