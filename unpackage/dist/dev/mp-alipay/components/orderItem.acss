.order-item-content {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  padding: 30rpx 20rpx;
}
.order-item-content .top {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: 28rpx;
    color: #333333;
}
.order-item-content .top .stadus {
      width: 132rpx;
      height: 44rpx;
      text-align: center;
      line-height: 44rpx;
      border-radius: 44rpx;
      font-size: 24rpx;
      margin-right: 20rpx;
}
.order-item-content .top .stadus.error {
        background: #FDE1DC;
        color: #F14322;
}
.order-item-content .top .stadus.warning {
        background: #FCEED3;
        color: #F1A921;
}
.order-item-content .top .stadus.ok {
        background: #D3FCF1;
        color: #49F3C1;
}
.order-item-content .info {
    line-height: 50rpx;
    margin-top: 20rpx;
}
.order-item-content .info .name {
      font-size: 28rpx;
      color: #555555;
}
.order-item-content .info .detail {
      font-size: 28rpx;
      color: #999999;
}
.order-item-content .info .detail.num {
        color: #F14322;
}

